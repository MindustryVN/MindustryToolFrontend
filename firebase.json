{
	"hosting": {
		"site": "mindustrytool",
		"public": "build",
		"ignore": ["**/.*", "**/node_modules/**"],
		"headers": [
			{
				"source": "**/*.chunk.@(js|css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					},
					{
						"key": "X-Content-Type-Options",
						"value": "nosniff"
					}
				]
			},
			{
				"source": "/**/!(*.*)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "no-cache"
					}
				]
			}
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
